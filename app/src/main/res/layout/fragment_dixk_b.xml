<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background">
    <LinearLayout
        android:id="@+id/dixk_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <include layout="@layout/assembly_public_title" />
    </LinearLayout>
    <TextView
        android:id="@id/dixk_b_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/gray_1"
        android:text="全部"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dixk_title"

        />
    <ImageView
        android:id="@id/dixk_b_rl"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/calendar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/dixk_b_rl_text"
        app:layout_constraintTop_toTopOf="@id/dixk_b_rl_text"
        app:layout_constraintBottom_toBottomOf="@id/dixk_b_rl_text"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="1:1.3"
        />
    <TextView
        android:id="@id/dixk_b_rl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="筛选"
        android:textSize="13sp"
        android:textColor="@color/gray_1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/dixk_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/dixk_b_text1"
        />
    <ListView
        android:id="@id/dixk_b_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@color/white_text"
        android:dividerHeight="1px"
        android:background="@color/whtie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dixk_b_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

</android.support.constraint.ConstraintLayout>