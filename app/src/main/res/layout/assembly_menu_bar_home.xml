<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whtie">
    <!--第一行-->
    <LinearLayout
        android:id="@+id/button_menu_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_weight="1"
            android:padding="10dp"
            />
    </LinearLayout>
    <!--第二行-->
    <LinearLayout
        android:id="@+id/button_menu_layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/button_menu_layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />

        <com.ttyp.tiantao.assembly.myButton.MenuButton
            android:id="@id/menu_bar_button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>