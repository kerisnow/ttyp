<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whtie"
        >
        <include layout="@layout/assembly_public_title" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/gray_blod_ground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card"
                    />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/red"
                    />
                <EditText
                    android:id="@id/dixk_a_edit1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text=""
                    android:hint="请输入充值卡号"
                    android:textColorHint="@color/gray"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:background="@null"
                    />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/gray_blod_ground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:background="@drawable/lock"
                    />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/red"
                    />
                <EditText
                    android:id="@id/dixk_a_edit2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text=""
                    android:hint="请输入充值密码"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:background="@null"
                    />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@id/dixk_a_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/red_track"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/whtie"
                android:text="确认充值"
                android:textSize="15sp"
                />
        </FrameLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/recharge_back"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@id/dixk_a_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/dixk_a_blackcut"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:text="充值记录"
                />
            <ImageView
                android:id="@+id/dixk_a_blackcut"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/gray_1"
                />
            <TextView
                android:id="@id/dixk_a_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dixk_a_blackcut"
                android:layout_marginLeft="10dp"
                android:text="消费记录"
                android:textColor="@color/gray"
                android:textSize="13sp"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>