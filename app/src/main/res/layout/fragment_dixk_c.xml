<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whtie"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="40dp"
            android:layout_margin="10dp"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/dixk_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whtie"
                android:text="50.00"
                android:textSize="35sp"
                android:gravity="left"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            >
            <TableRow>
                <LinearLayout
                    android:id="@+id/dixk_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即充值"
                        android:textSize="16sp"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:text="购物抵现 钜惠省钱"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dixk_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充值记录"
                        android:textSize="16sp"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:text="充值记录 查看详情"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/dixk_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消费记录"
                        android:textSize="16sp"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:text="兑换记录 实时掌握"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dixk_layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的卡片"
                        android:textSize="16sp"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whtie"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:text="领取记录 浏览查看"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
        <ImageView
            android:id="@+id/dixk_ad_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>