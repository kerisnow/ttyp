<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    >
    <ImageView
        android:id="@+id/conpon_back"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/get_coupon_back"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        />
    <ImageView
        android:id="@+id/conpon_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_button"
        app:layout_constraintTop_toBottomOf="@id/conpon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/conpon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/conpon_back"
        app:layout_constraintBottom_toBottomOf="@id/conpon_back"
        app:layout_constraintLeft_toLeftOf="@id/conpon_back"
        app:layout_constraintRight_toRightOf="@id/conpon_back"
        android:textColor="@color/red_1"
        android:layout_marginBottom="100dp"
        android:textSize="45dp"
        android:text="160"
        android:maxLength="4"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="15sp"
        android:textColor="@color/red_1"
        app:layout_constraintBottom_toBottomOf="@id/conpon_text"
        app:layout_constraintLeft_toRightOf="@id/conpon_text"
        android:layout_marginBottom="3dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/conpon_yes"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/conpon_back"
        app:layout_constraintLeft_toLeftOf="@id/conpon_back"
        app:layout_constraintRight_toRightOf="@id/conpon_back"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout_white_g_gray_r_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认兑换 ▶"
            android:textColor="@color/red_1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>