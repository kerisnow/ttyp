<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background">
    <include android:id="@+id/title" layout="@layout/assembly_public_title" />
    <TextView
        android:id="@+id/share_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/share_title2"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="7dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="每日爆款"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/share_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/share_title1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="7dp"
        app:layout_constraintBaseline_toBaselineOf="@id/share_title1"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="宣传素材"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/dividing_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_title1"
        android:layout_marginTop="3dp"
        android:background="@color/gray"
        />
    <ListView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividing_line"
        android:layout_marginTop="5dp"
        >

    </ListView>
</android.support.constraint.ConstraintLayout>