<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background">
    <include android:id="@+id/title" layout="@layout/assembly_public_title" />
    <TextView
        android:id="@+id/message_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="您的消息标题"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        />
    <com.jaychan.view.MultipleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:prefixText="还可以输入"
        app:prefixTextColor="@color/gray_1"
        app:contentTextColor="@color/gray_1"
        app:contentText="22"
        app:suffixTextColor="@color/gray_1"
        app:suffixText="字"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/message_t"
        />
    <EditText
        android:id="@+id/message_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_t"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_track"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_1"
        android:hint="请输入标题（仅限文本内容）"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        />


    <TextView
        android:id="@+id/message_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="您的消息内容"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        />
    <com.jaychan.view.MultipleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:prefixText="还可以输入"
        app:prefixTextColor="@color/gray_1"
        app:contentTextColor="@color/gray_1"
        app:contentText="22"
        app:suffixTextColor="@color/gray_1"
        app:suffixText="字"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/message_t1"
        />
    <EditText
        android:id="@+id/message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_t1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_track"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_1"
        android:hint="请输入消息内容（仅限文本内容）"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:maxLines="10"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/red_track"
        android:textSize="20sp"
        android:textColor="@color/whtie"
        android:text="提交审核"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
</android.support.constraint.ConstraintLayout>