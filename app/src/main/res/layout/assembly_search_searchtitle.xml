<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/search_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/search_back"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:id="@+id/search_search_pic"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:src="@drawable/search_ic"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="@id/search_back"
        app:layout_constraintTop_toTopOf="@id/search_back"
        app:layout_constraintBottom_toBottomOf="@id/search_back"
        />
    <EditText
        android:id="@+id/search_search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColorHint="@color/gray"
        android:hint="输入关键字，搜索 品牌/商品"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/search_search_pic"
        app:layout_constraintTop_toTopOf="@id/search_search_pic"
        app:layout_constraintBottom_toBottomOf="@id/search_search_pic"
        app:layout_constraintEnd_toEndOf="@id/search_back"
        android:background="@null"
        />
    <FrameLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/search_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whtie"
            android:textSize="15sp"
            android:text="取消"
            />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>


