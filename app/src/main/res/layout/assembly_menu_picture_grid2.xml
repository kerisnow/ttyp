<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <ImageView
                    android:id="@+id/grid1_image_left"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintRight_toLeftOf="@id/grid1_title"
                    app:layout_constraintTop_toTopOf="@id/grid1_title"
                    app:layout_constraintBottom_toBottomOf="@id/grid1_title"
                    android:src="@drawable/tree_red"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/grid1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/red"
                    android:text="推荐位标题"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/grid1_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintLeft_toRightOf="@id/grid1_title"
                    app:layout_constraintTop_toTopOf="@id/grid1_title"
                    app:layout_constraintBottom_toBottomOf="@id/grid1_title"
                    android:src="@drawable/tree_red"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    />
                <GridLayout
                    android:id="@+id/my_pic_grid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/grid1_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:rowCount="1"
                    android:columnCount="2"
                    >
                        <ImageView
                            android:id="@+id/picgrid_image1"
                            android:scaleType="fitXY"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:src="@drawable/selected_pic1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            />
                        <ImageView
                            android:id="@+id/picgrid_image2"
                            android:scaleType="fitXY"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:src="@drawable/selected_pic2"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            />
                </GridLayout>
        </android.support.constraint.ConstraintLayout>
</merge>

