<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background"
    android:padding="2dp"
    >

    <ImageView
        android:id="@+id/goods_list_good_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/goods_back_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <LinearLayout
            android:id="@+id/tet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/goods_list_good_image"
           >
        <TextView
            android:id="@+id/goods_list_title_text_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLines="2"

            />
        <LinearLayout
            android:id="@+id/goods_list_fenxiao_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <TextView
                android:id="@+id/goods_list_fenxiao_offset"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="88元"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:background="@drawable/goods_offset"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/goods_list_fenxiao_earn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="12340.11元"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:background="@drawable/goods_earn"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                >
                <TextView
                    android:id="@+id/goods_list_price_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:text="￥19.99"
                    android:layout_marginLeft="5dp"
                    />
                <com.ttyp.tiantao.assembly.myTextView.OldPricTextView
                    android:id="@+id/goods_list_price_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥59.99"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/goods_list_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="销量16519494894797"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:paddingRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="1dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shop"
                    />
                <TextView
                    android:id="@+id/goods_list_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百草味旗舰店"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/goods_list_address_image"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/address"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/goods_list_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="内蒙古呼和浩特"
                    android:layout_marginLeft="3dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>